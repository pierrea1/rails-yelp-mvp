<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>

<h1> Add a review to <%= @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
<div class="form-inputs">
  <%= f.input :content %>
  <%= f.label :rating %><br>
  <%= f.select :rating, ["1", "2", "3", "4", "5"]%>

</div>

<div class="form-actions">
  <%= f.submit "add your review", class: "btn btn-primary" %>
</div>
<% end %>

<%= link_to "Back to restaurant", restaurant_path(@restaurant)  %>
